{
  "compilerOptions": {
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
			"@constants": ["src/constants"],
			"@helpers": ["src/helpers"],
			"@hooks": ["src/hooks"],
			"@lib": ["lib"],
			"@lib/*": ["lib/*"],
			"@modules/*": ["src/modules/*"],
			"@services": ["src/services"],
      "@assets/*": ["src/assets/*"],
      "@src": ["src"],
      "@src/*": ["src/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
